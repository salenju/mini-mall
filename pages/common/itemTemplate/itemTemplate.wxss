.product-item {
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #d9d9d9;
}

.product-item .pt-img image {
  width: 140rpx;
  height: 140rpx;
}

.product-item .pt-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  padding: 0 0 0 20rpx;
  font-size: 32rpx;
}

.product-item .pt-info .pt-price {
  color: #f56a00;
  font-size: 28rpx;
}
