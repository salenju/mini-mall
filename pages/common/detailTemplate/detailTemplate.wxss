.detail-container {
  position: relative;
  background: #f5f5f5;
}

.dc-swiper {
  width: 100%;
  margin: 10rpx 0;
  text-align: center;
}

.dc-swiper image {
  width: 100%;
}

.dc-info {
  display: flex;
  flex-direction: column;
  padding: 0 20rpx 100rpx;
}

.dc-info .dc-name {
  font-size: 32rpx;
  font-weight: 700;
  padding: 10rpx 0;
}

.dc-info .dc-price {
  color: #f56a00;
  font-size: 28rpx;
  padding: 10rpx 0;
}

.dc-info .dc-description {
  color: #919191;
  font-size: 28rpx;
}

.dc-add {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  background: #fff;
  border: 1px solid #d9d9d9;
  font-size: 32rpx;
  color: #479de6;
}

.dc-add image {
  width: 34rpx;
  height: 34rpx;
  padding: 0 8rpx;
}
