.dc-swiper {
  width: 100%;
  margin: 10rpx 0;
  text-align: center;
}

.dc-swiper image {
  width: 100%;
}

.dc-info {
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}

.dc-info .dc-name {
  font-size: 32rpx;
  font-weight: 700;
  padding: 10rpx 0;
}

.dc-info .dc-price {
  color: #f56a00;
  font-size: 28rpx;
  padding: 10rpx 0;
}

.dc-info .dc-description {
  color: #919191;
  font-size: 28rpx;
}

.dc-add {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height:80rpx;
  background: #ffffff;
  border:1px solid #d9d9d9;
  font-size: 32rpx;
  color: #479de6;
}

.dc-add image {
  width: 34rpx;
  height: 34rpx;
  padding:0 8rpx;
}
