/* pages/user/user.wxss */

.user-container {
  width: 100%;
  height: auto;
  min-height: 1200rpx;
  background: #f5f5f5;
}

/* 用户图像 */

.user-icon {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.user-icon .avatar {
  width: 160rpx;
  height: 160rpx;
}

.user-icon .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 80rpx;
}

.user-icon .nickName {
  padding: 20rpx 0;
}

.info {
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 0 20rpx;
  border: 2rpx solid #f5f5f5;
}

.info.about {
  margin: 30rpx 0;
}

.info .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  width: 100%;
  border-bottom: 2rpx solid #f5f5f5;
}

.info .item:last-child {
  border: none;
}

.info .item view {
  display: flex;
  align-items: center;
}

.info .item view image {
  width: 50rpx;
  height: 50rpx;
  padding: 0 10rpx 0 0;
}

.info .item text.more-icon {
  color: #bfbfbf;
}

.sign-out {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height:80rpx;
  width: 100%;
  background: #ffffff;
  border:2rpx solid #f5f5f5;
}

