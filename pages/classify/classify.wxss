/* pages/classify/classify.wxss */
@import '../common/itemTemplate/itemTemplate.wxss';

.classify-container {
  display: flex;
}

/* category style Start */

.nav-left {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 100%;
  background: #f5f5f5;
  font-size: 28rpx;
}

.nav-left .nl-item {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 80rpx;
}

.nav-left .nl-item.active {
  background: #ffffff;
}

/* category style End */

/* list style Start */

.nav-right {
  width: 100%;
}

/* list style End */
