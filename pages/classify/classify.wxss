/* pages/classify/classify.wxss */
@import '../common/itemTemplate/itemTemplate.wxss';

.classify-container {
  display: flex;
}

/* category style Start */

.cc-category {
  width: 200rpx;
  height: 100%;
  background: #f5f5f5;
  font-size: 28rpx;
  padding:0 20rpx;
}

.cc-category .cc-scroll-view {
  display: flex;
  flex-direction: column;
}

.cc-category .cc-scroll-view view {
  height: 60rpx;
}

/* category style End */

/* list style Start */

.cc-list {
  width: 100%;
}

/* list style End */
